---
apiVersion: v1
clusters:
- cluster:
    certificate-authority: /var/lib/kubernetes/pki/{{ item.certificate_authority }}
    server: https://{{ item.server }}:6443
  name: kubernetes-the-hard-way
contexts:
- context:
    cluster: kubernetes-the-hard-way
    user: {{ item.user }}
  name: default
current-context: default
kind: Config
preferences: {}
users:
- name: {{ item.user }}
  user:
    client-certificate: /var/lib/kubernetes/pki/{{ item.client_certificate }}
    client-key: /var/lib/kubernetes/pki/{{ item.client_key }}
...